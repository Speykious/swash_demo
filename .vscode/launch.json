	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'swash_demo'",
			"cargo": {
				"args": [
					"build",
					"--bin=swash_demo",
					"--package=swash_demo"
				],
				"filter": {
					"name": "swash_demo",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'swash_demo'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=swash_demo",
					"--package=swash_demo"
				],
				"filter": {
					"name": "swash_demo",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}